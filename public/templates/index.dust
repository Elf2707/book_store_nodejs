{>"layouts/master" /}

{<body}
    {#books}
        <div class="large-3 columns book">
            <img src="/images/{.cover}" alt="image">
            <h4>{.title}</h4>
            <h6>Author: {.author}</h6>
            <h6>Publisher: {.publisher}</h6>
            <p>{.trancText}</p>

            <div class="price">Buy it for <span>{.price}</span></div>
            <a href="/books/details/{._id}" class="button small">Book details</a>

        </div>
    {/books}
{/body}
